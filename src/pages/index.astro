---
import Layout from "../layouts/Layout.astro"
import QuePodemosHacer from "../components/sections/QuePodemosHacer.astro"
import Servicios from "../components/sections/Servicios.astro"
import MetodoDeTrabajo from "../components/sections/MetodoDeTrabajo.astro"
import Header from "../components/sections/Header.astro"
import Contacto from "../components/sections/Contacto.astro"
---

<Layout title="Team Digital">
  <Header />
  <main class="md:mx-52 mx-1">
    <QuePodemosHacer />
    <Servicios />
    <MetodoDeTrabajo />
  </main>
  <Contacto />
</Layout>

<script>
  const btn = document.querySelector("button.mobile-menu-button");
  const menu = document.querySelector(".mobile-menu");

  btn.addEventListener("click", () => {
    menu.classList.toggle("hidden");
  });
</script>
