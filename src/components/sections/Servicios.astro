---
import Title from "../Title.astro";
import Section from "./../Section.astro"

const SERVICIOS = [
  { nombre: 'Soporte técnico', image: '/images/soporte.png' },
  { nombre: 'Consultoría', image: '/images/consultoria.png' },
  { nombre: 'Diseño de paginas web', image: '/images/des-web.png' },
  { nombre: 'Aplicaciones web', image: '/images/dev-movil.png' },
  { nombre: 'Desarrollo de API ', image: '/images/dev-web.png' },
  { nombre: 'Aplicaciones móvil', image: '/images/dev-movil.png' },
  { nombre: 'Accesoria en hosting y dominios', image: '/images/hosting-dominios.png' },
]
---

<Section id="servicios">
  <Title textAlign="text-center">Servicios</Title>

  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mt-10 px-3 md:px-0">
    {
    SERVICIOS.map(({nombre, image}) => (
    <div class="bg-white rounded-lg border border-[#FFCB77] shadow-md">
      <div class="flex flex-col items-center pb-10">
        <img class="my-3" src={image} alt="" />
        <h6 class="mb-1 text-lg text-center font-medium text-[#FFCB77]">{nombre}</h6>
      </div>
    </div>
    ))
    }
  </div>
</Section>
